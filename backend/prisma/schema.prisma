generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id          String   @id @default(cuid())
  email       String   @unique
  senha    String
  nome       String?
  criadoQuando   DateTime @default(now())
  atualizadoQuando   DateTime @updatedAt

  links       Link[]
}

model Link {
  id            String   @id @default(cuid())
  urlOriginal   String
  codigoCurto     String   @unique // parte curta da URL, ex: "abc123"
  titulo         String?
  criadoQuando     DateTime @default(now())
  atualizadoQuando     DateTime @updatedAt
  contagemClicks   Int      @default(0)

  idUser        String
  usuario          Usuario     @relation(fields: [idUser], references: [id], onDelete: Cascade)

  clicks        Click[]
}

model Click {
  id          String   @id @default(cuid())
  idLink     String
  link        Link     @relation(fields: [idLink], references: [id], onDelete: Cascade)
  criadoQuando   DateTime @default(now())

  ip   String?
  agenteUser   String?
  referer     String?
}