generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id          String     @id @default(cuid())
  nome        String?
  email       String     @unique
  senha    String
  criadoQuando   DateTime   @default(now())
  atualizadoQuando   DateTime   @updatedAt
  urls        ShortUrl[]
}

model ShortUrl {
  id          String    @id @default(cuid())
  urlOriginal String
  codigoCurto   String    @unique
  clicks      Int       @default(0)
  criadoQuando   DateTime  @default(now())
  expiraQuando   DateTime? 

  idUsuario      String?
  usuario        Usuario?     @relation(fields: [idUsuario], references: [id])

}
